@using KeyboxWeb.Models.Entites
@model User

@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<div style="display:flex; align-items:center; justify-content:center;height:100vh;">
    <form asp-action="Register" asp-controller="Account" style="width: 20%; font-size: 1.3rem; ">
        <div class="mb-3 pb-4 fw-normal" style="display: flex; align-items:center; justify-content:center;">
            <img src="~/img/login-logo.png" width="100" />
        </div>
        <div class="h4 mb-3 fw-normal" style="display: flex; align-items:center; justify-content:center;">Регистрация
        </div>
        <div style="color: rgb(162, 165, 174) !important">
            <div class="form-floating">
                <input asp-for="Name" type="text" class="form-control" id="floatingName" placeholder="Name">
                <label asp-for="Name" for="floatingName" style="display: flex; align-items:center;">Имя</label>
            </div>

            <div class="form-floating">
                <input asp-for="Login" type="text" class="form-control" id="floatingLogin" placeholder="Login">
                <label asp-for="Login" for="floatingLogin" style="display: flex; align-items:center;">Логин</label>
            </div>

            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword"
                    placeholder="Password">
                <label asp-for="Password" for="floatingPassword" style="display: flex; align-items:center;">Пароль</label>
            </div>
        </div>

        <button class="btn btn-primary mt-4 w-100 py-2" style="font-size: 1.3rem; " type="submit">Зарегистрироваться</button>
    </form>
</div>