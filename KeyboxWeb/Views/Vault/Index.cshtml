@using KeyboxWeb.Models.Entites
@model Category

@{
    ViewData["Title"] = "Vault";
    var cards = Model.Cards;
}

<script src="/js/card/search.js"></script>

<div class="col-12 col-sm-6 border">


    <div class="list-group">
        <div class="">
            <div class="h2 p-2 mt-2 float-left">@Model.Name</div>
            <div class="p-2 mt-2 float-right">
                <span class="h6 nav-link text-dark" aria-current="true">All items: @cards.Count()</span>
            </div>
        </div>



        <div class="list-group">
            <div class="input-group mb-3">
                <span class="input-group-text bg-light">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                    </svg>
                </span>
                <input type="text" class="form-control" placeholder="Search card..." oninput="search(value)">
            </div>

            <a asp-action="AddCard" asp-controller="Vault" asp-route-categoryId="@Model.Id" class="btn btn-light border mt-2 mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                     class="bi bi-plus-square" viewBox="0 0 16 16 mt-2">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
                </svg>
                Add new card
            </a>

            <div id="cardList">
                <partial name="~/Views/Card/Search.cshtml" model="cards"/>
            </div>
        </div>

    </div>

</div>

<!-- ТРЕТЬЯ КОЛОНКА -->
<div class="col-12 col-sm-4" id="cardInfo" style="width: 46%;">

    <div id="cardInfo">
        <!-- Внутренний блок №1 -->
        <div>
            <img src="@Url.Content("img/sec_pass.svg")" width="300px" class="d-flex w-75 justify-content-between mb-4" />
            <small style="color: grey">Для отображения информации, необходимо выбрать (нажать на) карточку.</small>
        </div>

        <!-- Внутренний блок №2 -->
    </div>
</div>
