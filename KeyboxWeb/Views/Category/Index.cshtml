@using KeyboxWeb.Logic.Interfaces.Services
@inject ICategoryService _categoryService

@{
    var categories = _categoryService.Get();
    string vaultName = "";

    if (string.IsNullOrEmpty(vaultName)) { vaultName = "Vault is null"; }
    else { vaultName = categories.First().Vault.Name; }

}

<style>
    .category-hover:hover {
        background-color: #e5e8f0;
        border-radius: 0.5rem;
        color: rgb(39, 81, 218) !important;
    }
</style>



<nav class="navbar-expand-lg w-100">
    <div class="" id="navbarNav">
        <ul class="navbar-nav flex-column">
            <div class="h2 p-2 mt-2 ml-4 border-bottom">@vaultName</div>
            <div>
                <div class="h5 p-2 mt-2 ml-4 float-left" style="color: #babad5">Categories</div>
                <div class="float-right m-2 pt-1 pr-4">
                    <a href="/category/addcategory" class="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                            class="bi bi-folder-plus" viewBox="0 0 16 16">
                            <path
                                d="m.5 3 .04.87a2 2 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2m5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19q-.362.002-.683.12L1.5 2.98a1 1 0 0 1 1-.98z" />
                            <path
                                d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5" />
                        </svg></a>
                </div>
            </div>

            <ul class="list-group" style="padding-left: 2.5rem; margin-top: -0.3rem">

                @foreach (var category in categories)
                {
                    <nav class="nav flex-column">
                        <a href="#" class="nav-link text-dark category-hover">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                                class="bi bi-folder2" viewBox="0 0 16 16" style="margin-top: -0.2rem">
                                <path
                                    d="M1 3.5A1.5 1.5 0 0 1 2.5 2h2.764c.958 0 1.76.56 2.311 1.184C7.985 3.648 8.48 4 9 4h4.5A1.5 1.5 0 0 1 15 5.5v7a1.5 1.5 0 0 1-1.5 1.5h-11A1.5 1.5 0 0 1 1 12.5zM2.5 3a.5.5 0 0 0-.5.5V6h12v-.5a.5.5 0 0 0-.5-.5H9c-.964 0-1.71-.629-2.174-1.154C6.374 3.334 5.82 3 5.264 3zM14 7H2v5.5a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 .5-.5z" />
                            </svg>
                            @category.Name</a>
                        @* <a href="/category/deletecategory/@category.Id" class="text-danger">Удалить</a> *@
                    </nav>
                }
            </ul>


            <div>
                <div class="h5 p-2 mt-2 ml-4 float-left" style="color: #babad5">Settings</div>
            </div>

            <ul class="list-group" style="padding-left: 2.5rem; margin-top: -0.3rem">
                <nav class="nav flex-column">
                    <a href="#" class="nav-link text-dark category-hover">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-person-circle" viewBox="0 0 16 16" style="margin-top: -0.2rem">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                            <path fill-rule="evenodd"
                                d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                        </svg>
                        Account</a>
                </nav>
                <nav class="nav flex-column">
                    <a href="#" class="nav-link text-dark category-hover">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-info-circle" viewBox="0 0 16 16" style="margin-top: -0.2rem">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
                            <path
                                d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0" />
                        </svg>
                        About</a>
                </nav>

            </ul>





        </ul>
    </div>


</nav>
